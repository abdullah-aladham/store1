@model List<store1.Models.MViews.CustomerViewModel>

@{
    ViewData["Title"] = "CustomerIndex";

}
@Model List<CustomerModel>

    <h1>Admins</h1>

    <form>
        <button asp-action="Create" asp-controller="Customer" class="btn btn-primary">Add Customer</button>
    </form>
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var admin in Model)
                {
                    <tr>
                        <td>@admin.Id</td>
                        <td>@admin.Name</td>
                        <td>
                            <form>
                                <div class="btn-group btn-group-sm">
                                    <button asp-action="Edit" asp-controller="Admin" asp-route-id="@admin.Id" class="btn btn-primary">Edit</button>


                                </div>
                                <div class="btn-group btn-group-sm">
                                    <button asp-action="Delete" asp-controller="Admin" asp-route-id="@admin.Id" class="btn btn-danger">Delete</button>
                                </div>
                            </form>
                        </td>
                    </tr>

                }
            }
            else
            {
                <tr>
                    <td colspan="2">
                        <div><p>No Admins Avaliable at the moment</p></div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
