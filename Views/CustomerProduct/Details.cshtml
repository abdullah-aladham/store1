@model store1.Models.CustomerProducts
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <style>
        tr{margin :px}
    </style>
</head>
<body>
    <table class="table ">
        @if (Model != null && Model.Customer.type == "Top")
        {
            <tr class="table table-responsive table-hover">
            
           
            <th>Customer Name</th>
            <th>Customer type</th>
            <th>Product name</th>
            <th>Product Sale price</th>
    
            </tr>
    
       <tr>
           <td>@Html.DisplayFor(modelitem=>Model.Customer.Name)</td>
           <td>@Html.DisplayFor(modelitem=>Model.Customer.type)</td>
           <td>@Html.DisplayFor(modelitem=>Model.Product.Name)</td>
           <td>@Html.DisplayFor(modelitem=>Model.Product.wholesalePrice)</td>
            </tr>

        }

        else
        {
            <tr>
            
            <th>Customer Name</th>
            <th>Customer type</th>
            <th>Product name</th>
            <th>Product price</th>
    
            </tr>
            <tr>
                
                <td>@Html.DisplayFor(modelitem=>Model.Customer.Name)</td>
                <td>@Html.DisplayFor(modelitem=>Model.Customer.type)</td>
                <td>@Html.DisplayFor(modelitem=>Model.Product.Name)</td>
                <td>@Html.DisplayFor(modelitem=>Model.Product.price)</td>
            </tr>
        }
    </table>
</body>
</html>
