@model store1.Models.MViews.CustomerProductViewModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Customer</title>
    <style>
        input {
            padding: 5px;
        }

        div {
            margin: 5px;
        }

        input[radio] {
            padding: 5px;
        }
    </style>
</head>
<body>
    <form action="CreateCustomerProduct" method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">CustomerId</label>
            <input type="text" class="form-control" asp-for="CustomerId" />
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">ProductId</label>
            <input type="text" class="form-control" asp-for="ProductId" />
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        
        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </form>
</body>
</html>
